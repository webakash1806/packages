{
  "name": "devi-rce",
  "version": "1.0.3",
  "description": "A powerful Rich Content Editor component for React applications",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "shx cp ./*.css ./dist/ && shx mkdir -p ./dist/src && shx cp ./src/*.css ./dist/src/ 2>nul || echo CSS files copied",
    "clean": "shx rm -rf dist",
    "prepare": "npm run build",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "react",
    "rich-text-editor",
    "wysiwyg",
    "tiptap",
    "editor",
    "content-editor",
    "typescript",
    "component",
    "ui",
    "text-formatting"
  ],
  "author": {
    "name": "Akash Kumar Singh",
    "email": "webakash1806@gmail.com",
    "url": "https://github.com/webakash1806"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/webakash1806/devi-extra-package.git"
  },
  "bugs": {
    "url": "https://github.com/webakash1806/devi-extra-package/issues"
  },
  "homepage": "https://github.com/webakash1806/devi-extra-package#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "shx": "^0.4.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@tiptap/extension-character-count": "^2.26.1",
    "@tiptap/extension-code-block-lowlight": "^2.26.1",
    "@tiptap/extension-color": "^2.1.0",
    "@tiptap/extension-dropcursor": "^2.26.1",
    "@tiptap/extension-focus": "^2.26.1",
    "@tiptap/extension-font-family": "^2.1.0",
    "@tiptap/extension-gapcursor": "^2.26.1",
    "@tiptap/extension-highlight": "^2.1.0",
    "@tiptap/extension-image": "^2.1.0",
